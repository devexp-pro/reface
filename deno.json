{
  "lock": false,
  "name": "@vseplet/reface",
  "version": "0.1.0",
  "workflows": {
    "UpdateSemverDeployJsr": {
      "versionsFilePath": "./reface/versions.ts"
    }
  },
  "exports": {
    ".": "./reface/mod.ts",
    "./core": "./reface/core/mod.ts",
    "./html": "./reface/html/mod.ts",
    "./elements": "./reface/elements/mod.ts",
    "./jsx": "./reface/jsx/mod.ts",
    "./layouts": "./reface/layouts/mod.ts"
  },
  "imports": {
    "@reface": "./reface/mod.ts",
    "@reface/core": "./reface/core/mod.ts",
    "@reface/html": "./reface/html/mod.ts",
    "@reface/elements": "./reface/elements/mod.ts",
    "@reface/jsx": "./reface/jsx/mod.ts",
    "@reface/layouts": "./reface/layouts/mod.ts",
    "@reface/types": "./reface/core/types.ts",
    "@reface/test-utils": "./reface/__tests__/utils.ts",
    "@std/assert": "jsr:@std/assert@^1.0.1",
    "@std/crypto": "jsr:@std/crypto@^1.0.2",
    "@hono/hono": "jsr:@hono/hono@4.5.6"
  },
  "tasks": {
    "ex1": "deno run --allow-all --unstable-ffi --watch=./examples/ex1.ts ./examples/ex1.ts",
    "ex2": "deno run --allow-all --watch=./examples/ex2.ts ./examples/ex2.ts",
    "ex3": "deno run --allow-all --unstable-kv --watch=./examples/ex3.ts ./examples/ex3.ts",
    "ex4": "deno run --allow-all --watch=./examples/ex4.ts ./examples/ex4.ts",
    "ex5": "deno run --allow-all --watch=./examples/ex5.ts ./examples/ex5.ts",
    "ex6": "deno run --allow-all --watch=./examples/ex6.ts ./examples/ex6.ts",
    "pub-dry": "deno publish --dry-run --allow-slow-types",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "test:core": "deno test -A reface/core/__tests__/",
    "test:html": "deno test -A reface/html/__tests__/",
    "test:elements": "deno test -A reface/elements/__tests__/",
    "test:jsx": "deno test -A reface/jsx/__tests__/",
    "test:coverage": "deno test -A --coverage=coverage && deno coverage coverage",
    "test:ci": "deno test -A --coverage=coverage --junit-path=junit.xml",
    "website:dev": "deno run -A --watch website/main.tsx"
  },
  "fmt": {
    "exclude": [
      "./reface/versions.ts"
    ]
  },
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment"
  }
}
