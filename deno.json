{
  "lock": false,
  "name": "@vseplet/reface",
  "version": "1.0.9",
  "workflows": {
    "UpdateSemverDeployJsr": {
      "versionsFilePath": "./versions.ts"
    }
  },
  "exports": {
    ".": "./source/reface/mod.ts",
    "./htmx": "./source/reface/htmx/mod.ts",
    "./elements": "./source/reface/elements.ts",
    "./jsx": "./source/reface/jsx/mod.ts",
    "./jsx/jsx-runtime": "./source/reface/jsx/jsx-runtime.ts",
    "./template": "./source/reface/template/mod.ts",
    "./plugins/styled": "./source/reface/plugins/styled/mod.ts",
    "./plugins/partials": "./source/reface/plugins/partials/mod.ts",
    "./plugins/LoggerPlugin": "./source/reface/plugins/LoggerPlugin.ts",
    "./plugins/liveReload": "./source/reface/plugins/liveReload/mod.ts",
    "./components/LayoutSimple": "./source/reface/components/LayoutSimple.ts",
    "./components/LayoutTWA": "./source/reface/components/LayoutTWA.ts"
  },
  "imports": {
    "@reface": "./source/mod.ts",
    "@reface/jsx": "./source/reface/jsx/mod.ts",
    "@reface/jsx/jsx-runtime": "./source/reface/jsx/jsx-runtime.ts",
    "@reface/types": "./source/reface/types/mod.ts",
    "@reface/constants": "./source/reface/constants.ts",
    "@reface/island": "./source/reface/island/mod.ts",
    "@reface/htmx": "./source/reface/htmx/mod.ts",
    "@reface/elements": "./source/reface/elements.ts",
    "@reface/template": "./source/reface/template/mod.ts",
    "@reface/plugins/styled": "./source/reface/plugins/styled/mod.ts",
    "@reface/plugins/partials": "./source/reface/plugins/partials/mod.ts",
    "@reface/plugins/LoggerPlugin": "./source/reface/plugins/LoggerPlugin.ts",
    "@reface/plugins/liveReload": "./source/reface/plugins/liveReload/mod.ts",
    "@reface/components/LayoutSimple": "./source/reface/components/LayoutSimple.ts",
    "@std/assert": "jsr:@std/assert@^1.0.1",
    "@std/crypto": "jsr:@std/crypto@^1.0.2",
    "@hono/hono": "jsr:@hono/hono@^4.6.15"
  },
  "tasks": {
    "ex1": "deno run --allow-all --unstable-ffi --watch=./examples/ex1.ts ./examples/ex1.ts",
    "ex2": "deno run --allow-all --watch=./examples/ex2.ts ./examples/ex2.ts",
    "ex3": "deno run --allow-all --unstable-kv --watch=./examples/ex3.ts ./examples/ex3.ts",
    "ex4": "deno run --allow-all --watch=./examples/ex4.tsx ./examples/ex4.tsx",
    "ex5": "deno run --allow-all --watch=./examples/ex5.ts ./examples/ex5.ts",
    "ex6": "deno run --allow-all --watch=./examples/ex6.ts ./examples/ex6.ts",
    "pub-dry": "deno publish --dry-run --allow-slow-types",
    "test": "deno test -A --no-check ./source/reface/",
    "test:watch": "deno test -A --watch --no-check ./source/reface/",
    "test:coverage": "deno test -A --coverage=coverage && deno coverage coverage",
    "test:ci": "deno test -A --coverage=coverage --junit-path=junit.xml",
    "website:dev": "DEV=true deno run -A --watch website/main.tsx",
    "check": "deno check ./source/reface/"
  },
  "fmt": {
    "exclude": [
      "./versions.ts",
      "./deno.json"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@reface/jsx"
  },
  "publish": {
    "include": [
      "./source/reface/**",
      "./README.md",
      "./LICENSE"
    ],
    "exclude": [
      "./**/__tests__"
    ]
  }
}